+    const configYaml = yaml.dump(options.moduleConfig);
+    await fs.writeFile(configYamlPath, configYaml, 'utf8');
+
+    if (fileTrackingCallback) {
+      fileTrackingCallback(configYamlPath);
+    }
+  }
+
